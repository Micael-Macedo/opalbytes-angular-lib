{
  "name": "cin-client",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:prod": "ng serve --open --configuration production",
    "start:hmg": "ng serve --open --configuration homologation",
    "start:dev": "ng serve --open --configuration development",
    "start:local": "ng serve --open --configuration local",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:hmg": "ng build --configuration homologation",
    "build:dev": "ng build --configuration development",
    "build:local": "ng build --configuration local",
    "test": "ng test",
    "lint": "ng lint --fix",
    "format": "prettier --write .",
    "compodoc": "npx compodoc -p tsconfig.doc.json",
    "compodoc:build": "npx compodoc -p tsconfig.doc.json",
    "compodoc:serve": "npx compodoc -p tsconfig.doc.json -s"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.0",
  "dependencies": {
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "embla-carousel": "^8.6.0",
    "jwt-decode": "^4.0.0",
    "ngx-opalbytes-directives": "file:../opalbytes-directive-components/dist/ngx-opalbytes-directives",
    "ngx-webstorage": "^21.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "angular-eslint": "21.0.1",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4",
    "vitest": "^4.0.8"
  }
}
